NODE_ENV=development

# Orchestrator API (aligns with our spec: /api/v1)
ORCHESTRATOR_BASE_URL=http://localhost:3030/api/v1
ORCHESTRATOR_API_KEY=demo-key

# Identity
FEEDER_SOURCE_NAME=feeder-sim

# Symbols (comma-separated)
SYMBOLS=BTCUSDT,ETHUSDT,XAUUSD

# Generation
RPS=20                 # total ticks per second (across all symbols)
BATCH_SIZE=50          # max items per POST
FLUSH_MS=250           # force flush interval
JITTER=0.20            # +/- 20% random jitter around RPS pacing

# Price model (geometric random walk)
PRICE_SEED=auto
PRICE_BASE=BTCUSDT:68000,ETHUSDT:3200,XAUUSD:2350
VOLATILITY=BTCUSDT:0.0015,ETHUSDT:0.0020,XAUUSD:0.0004

# Networking
TIMEOUT_MS=8000
RETRY=3
RETRY_BASE_MS=150

# Metrics/ops
METRICS_PORT=9400
OPS_PORT=9303